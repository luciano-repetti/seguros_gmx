.c-navigation-page
    position: sticky
    z-index: 50
    top: 126px
    width 100%
    background-color blue-1
    box-shadow: rgba(9, 30, 66, 0.25) 0px 1px 1px, rgba(9, 30, 66, 0.13) 0px 0px 1px 1px;
    display flex
    justify-content center
    align-items center
    padding: 1em 0
    margin-bottom .5em
    +Desktop(max)
        top: 66px
        box-shadow: none
        position: static
    &__list-section
        display flex
        justify-content center
        align-items center
        width 100%
        > ul
            width 100%
            max-width 1200px
            display flex
            justify-content space-between
            align-items center
            flex-wrap wrap
            +TabletLandscape(max)
                padding 20px 20px
                max-width 100%
                justify-content center
                gap 1.5em
            li
                +TabletLandscape(max)
                    width 100%
                    display: flex
                    justify-content: center
                &.container-anchor
                    > a
                        width fit-content
                        font-size 18px
                        color blueDark-4
                        text-decoration none
                        padding 1em 0
                        text-align: center
                        +TabletLandscape(max)
                            padding: .5em 0
                    &--active,
                    &:hover
                        > a
                            color green-1
                            position relative
                            &::after
                                content: ""
                                display: block
                                width 100%
                                height: 2px
                                background-color green-1
                                position: absolute
                                bottom: 0
                                transform: translateY(-100%)
                    &--bold > a
                            font-weight: 600
    &--void
        position: static
        +Desktop(max)
            box-shadow: rgba(9, 30, 66, 0.25) 0px 1px 1px, rgba(9, 30, 66, 0.13) 0px 0px 1px 1px;