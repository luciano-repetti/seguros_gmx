.splide
    +Mobile(max)
        padding 3em 2em
        padding-top 0
    +Mobile(max)
        padding 3em 1em
        padding-top 0
    +MobilePortrait(max)
        padding 3em .5em
        padding-top 0
    &__arrow
        cursor pointer
        width 48px
        height 48px
        border-radius 50%
        border 1px solid white
        display flex
        align-items center
        justify-content center
        background transparent
        opacity 1
        +MobileLandscape(max)
            width 45px
            height 45px
        > i
            color white
            font-size 1.5em
        &--next
            right -1.5em
            transform translate(100%, -50%)
            +Mobile(max)
                transform translate(100%, -50%)
                right 1.5em
        &--prev
            left -1.5em
            transform translate(-100%, -50%)
            +Mobile(max)
                transform translate(-50%, -50%)
                left 0
    &--desktop
        display block
        +Desktop(max)
            display none
    &--tablet
        display none
        +Desktop(max)
            display block
        @media (max-width 696px)
            display none
    &--mobile
        display none
        @media (max-width 696px)
            display block
    &not(.is-overflow)
        .splide__pagination
            display flex
            align-items center
            gap 1em
            bottom -3em
            +Mobile(max)
                bottom 0em
            .is-active
                opacity 1
                width 50px
                height 7px
                background green-1
                border-radius 4px
            &__page
                width 8px
                height 8px
                background white
                opacity 1
    .splide__pagination
            display flex
            align-items center
            gap 1em
            bottom -3em
            +Mobile(max)
                bottom .5em
            .is-active
                opacity 1
                width 50px
                height 7px
                background green-1
                border-radius 4px
                +Mobile(max)
                    width 35px
                    height 5px
            &__page
                width 8px
                height 8px
                background white
                opacity 1
                +Mobile(max)
                    width 5px
                    height 5px
            
        