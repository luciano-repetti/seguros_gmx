            font-size 28px
            font-family tipografia-serif
            +TabletPortrait(max)
                font-size 22px
            +Mobile(max)
                font-size 18px
    &__container-image
        width 176px
        height auto
        +TabletPortrait(max)
            width 100px
    &__container-card
        width 100%
        display flex
        position relative
        &--gap-1
            gap 1em
        &--padding-1
            padding-right 1em
        &__card-box
            display flex
            flex 1
            gap 1.5em
            padding 1.5em 2em
            border-radius 2em
            flex-direction column
            background-color white
            color blueDark-1
            > p
                font-family tipografia-serif
                font-size 24px
                line-height 32px
                width 90%
                +TabletPortrait(max)
                    width 100%
                    font-size 22px
                    line-height 28px
            > .container-title
                display flex
                justify-content space-between
                align-items center
                > p
                    margin-bottom 0
                > img
                    width 48px
                    heigth 48px
                    +Mobile(max)
                        width 42px
                        heigth 42px

