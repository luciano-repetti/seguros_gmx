        flex-direction column
        gap 3em
        width 100%
        max-width 1200px
        padding 5em 6em
        border-radius 2em
        background-color blueDark-1
        color white
        position relative
        +Mobile(max)
            padding 3em 2em
        > h3
            font-size 60px
            font-family tipografia-serif
            +TabletPortrait(max)
                font-size 40px
            +Mobile(max)
                font-size 30px
    &__container-banner
        display flex
        align-items center
        justify-content space-between
        +MobileLandscape(max)
            flex-direction column-reverse
            align-items flex-start
            gap 1em
    &__container-text
        display flex
        flex-direction column
        justify-content space-between
        height 100%
        +Tablet(max)
            gap 1em
        // > h3
