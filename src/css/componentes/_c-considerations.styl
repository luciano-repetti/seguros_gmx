.c-considerations
    width: 1200px
    color: blueDark-1
    display: flex
    flex-direction: column
    padding: 1em 6em
    gap: 1em
    +TabletLandscape(max)
        padding: 0 2em
    +Phablet(max)
        padding: 0
    > h3
        font-size: 60px
        font-family: tipografia-serif
        +TabletLandscape(max)
            font-size: 50px
        +Phablet(max)
            font-size: 35px
        p
            display: block
            font-size: 28px
            font-family: tipografia-serif
            +TabletLandscape(max)
                font-size: 22px
            +Phablet(max)
                font-size: 18px
    .c-container-cards
        display grid
        grid-template-columns repeat(3, 1fr)
        gap 1em
        width 100%
        max-width 1200px
        margin-top 1em
        +Tablet(max)
            grid-template-columns repeat(2, 1fr)
        +Mobile(max)
            grid-template-columns repeat(1, 1fr)
        .box-container
            display contents
            &__box
                border-radius 2em
                padding 2em
                padding-top: 3em
                display flex
                gap: 1em
                min-height: 200px
                color white
                position relative
                background-color: blue-1
                color: blueDark-1
                &--expand
                    grid-column: span 2
                    +Mobile(max)
                        grid-column: span 1
                > span
                    background-color blueDark-1
                    color white
                    border-radius 50%
                    width 28px
                    height 28px
                    display flex
                    justify-content center
                    align-items center
                    font-size .9em
                    flex-shrink: 0
                p
                    color: blueDark-1
                    font-size: 20px
                    margin-bottom 1em
                    +Tablet(max)
                        font-size: 16px
        .image-container
          display flex
          justify-content center
          align-items center
          background-color blueDark-1
          border-radius 2em
          padding 2em
          padding-top: 3em
          img
              width 100%
              max-width 150px