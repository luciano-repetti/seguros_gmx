.c-blog
	&Home
		overflow hidden
		position relative
		&__container 
			padding 0
			//margin 30px 0 0
			&:before 
				content ''
				width 90%
				border-radius 0px 36px 36px 0px
				height calc(100% - 40px)
				display block
				position absolute
				top 20px
				left 0
				background blue-1
				+Tablet()
					width 75%
				+TabletPortrait()
					top 45px 
					width 55%
					height calc(100% - 90px)

		&__title
			max-width 1048px
			margin 0 auto
			padding-top 34px
			padding-left 42px
			padding-right 20px
			+Desktop()
				margin-left auto
				margin-right 0
