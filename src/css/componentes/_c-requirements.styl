.c-requirements
    width: 100%
    background-color: blue-1
    display: flex
    justify-content: center
    padding: 6em
    margin: 2em 0
    +Mobile(max)
        padding: 3em
    +MobileLandscape(max)
        padding: 20px 2em
    > .container-requirements
        width: 100%
        max-width: 1200px
        display: flex
        flex-direction: column
        gap: 4em
        > h2
            font-size: 60px
            color: blueDark-1
            font-family: tipografia-serif
            +TabletPortrait(max)
                font-size: 40px
            +MobileLandscape(max)
                font-size: 30px
        .container-cards
            display: flex
            gap: 1.5em
            flex-wrap: wrap
            &__card
                display: flex
                flex-direction: column      
                background-color: white
                border-radius: 2em
                padding: 3em 2em
                flex: 1
                min-width: 300px
                +TabletPortrait(max)
                    flex: 2
                +MobileLandscape(max)
                    flex: 1
                    min-width: 100%
                &__title
                    margin-bottom: 1em
                    h3
                        font-family: tipografia-serif
                        color: blueDark-1
                        font-size: 16px
                        strong
                            display block
                            margin-top: .5em
                            font-size: 28px
                            +TabletPortrait(max)
                                font-size: 20px
                &__requirements
                    display: flex
                    flex-direction: column
                    gap: 1.5em
                    li
                        display: flex
                        align-items: flex-start
                        gap: .5em
                        position: relative
                        p   
                            margin-left: 30px
                            font-size: 1.05em
                            margin-bottom: 0
                        &:after
                            content: ''
                            background-image: url("../images/seguros/GMX-escudo-verde.png")
                            background-size: contain
                            background-repeat: no-repeat
                            width 20px
                            height: 24px
                            position: absolute
                            top 0
                            left: 0
                    &__image
                        padding-top: 4em
                        display: flex
                        justify-content: center
                        img
                            width 150px
                            height: auto