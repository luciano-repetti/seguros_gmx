$c-tabs = 'c-tabs'
.c-tabs
	&__nav
		position relative
		display none
		+TabletPortrait()
			display block
		ul
			display flex
			width 100%
			transition all .3s ease
		
		li
			flex 1
			display inline-flex
			align-items center
			justify-content center
	
			a
				color white
				font-size 17px
				line-height 21px
				width 100%
				height 100%
				padding 15px 20px 
				background blueDark-4
				overflow hidden
				text-align center
				border-bottom 1px solid blue-3
				transition 0.3s ease
		
				&:hover,
				&:focus
					background blue-1
					border-color blue-3
					border-bottom-color blue-1
					color blueDark-1
				+TabletPortrait()
					border 1px solid blueDark-4
					//border-bottom-color blue-3
					border-radius 36px 36px 0 0
					padding 20px 20px 10px
			&.is-active
				a
					background blue-1
					border-color blue-3
					color blueDark-1
					+TabletPortrait()
						border-bottom-color transparent

	&__box
		+TabletPortrait()
			overflow hidden
			background blue-1
			border 1px solid blue-3
			border-top none
			border-radius 0 0 36px 36px
			
	&__panel
		transition all 1s ease
		display block
		position relative
		margin 10px 0
		+TabletPortrait()
			margin 0
		//display none
		&.is-active
			//display block
			.{$c-tabs}__content
				height auto
				opacity 1
				padding 30px 10px 20px
				display block
				+TabletPortrait()
					padding 48px 32px
			.{$c-tabs}__link
				&:after
					content icon-arrow-down
					background green-1
					border-color green-1
					color white
					font-size 26px

	&__content
		padding 0
		height 0
		overflow hidden
		opacity 0
		display none
		+TabletPortrait()
			border-bottom none

	&__link
		background blue-1
		border 1px solid blue-3
		padding 27px 80px 27px 30px
		position relative
		color blueDark-1
		font-size 20px
		line-height 24px
		display block
		width 100%
		transition 0.3s ease
		border-radius 36px
		overflow hidden
		+TabletPortrait()
			display none
		// &:hover
		// 	background blueDark-4
		&:after
			content icon-arrow-up-right
			font-family tipografia-icon
			position absolute
			top 50%
			transform translateY(-50%)
			right 20px
			border 1px solid blueDark-1
			width 48px
			height 48px
			display inline-flex
			border-radius 50%
			background transparent
			color blueDark-1
			font-size 22px
			align-items center
			justify-content center
			transition 0.3s all ease
