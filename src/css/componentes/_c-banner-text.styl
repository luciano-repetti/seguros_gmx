.c-banner-text
	background blueDark-4
	padding 80px 0 60px
	+TabletPortrait()
		padding-bottom 130px
	&__title
		max-width 580px
		text-align center
		margin 0 auto 
		padding-bottom 35px
		h1, h2
			color white
			font-size 46px
			line-height 54px
			margin-bottom 0
			strong
				color green-1
				font-family tipografia-serif
				font-weight regular
			+MobileLandscape()
				font-size 52px
				line-height 64px
			+Mobile()
				font-size 60px
				line-height 72px
	&--padding1
		padding: 56px 0 72px
	&--image
		padding-bottom 150px
		+MobileLandscape(max)
			padding-bottom 100px
		h1
			line-height 60px
			gap 1rem
			+MobileLandscape(max)
				line-height 35px
				font-size 25px!important
	&__text
		max-width 700px
		text-align center
		margin 0 auto 
		padding 20px 0
		+TabletPortrait()
			max-width 1100px
		p
			color white
			font-size 24px
			line-height 30px
			margin-bottom 10px
