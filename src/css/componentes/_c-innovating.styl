.c-innovating
    width 100%
    display flex
    gap: 80px
    justify-content: center
    position: relative
    &__left, 
    &__right
        > .card
            display: flex
            flex-direction: column
            .title
                display: flex
                justify-content: space-between
                gap 16px
            .container-icon-right
                display: flex
                justify-content: flex-end
            .container-icon
                width: fit-content
                height: fit-content
                padding: 1em
                background-color: white
                border-radius: 26px
                img
                    width 46px
                    max-width: 46px
                    height: auto
            > p
                margin-top 36px
                font-size 20px
            h3
                margin-top: 20px
                font-family tipografia-serif
                font-size: 26px
            .container-image-center
                display: flex
                justify-content: center
                align-items: center
                width 100%
                height 100%
    &__left
