.c-innovating
    width 100%
    display flex
    gap: 80px
    justify-content: center
    position: relative
    +Responsive(max, 1165px)
        flex-direction: column
        gap: 24px
    &__left, 
    &__right
        +Responsive(max, 1165px)
            margin-left: 4em
        +Responsive(max, 500px)
            margin-left: 32px
        > .card
            display: flex
            flex-direction: column
            justify-content: center
            +Responsive(max, 1165px)
                width 100% !important
                height: 100% !important
                min-height: 300px !important
                max-height: 550px !important
            .title
                display: flex
                justify-content: space-between
                gap 16px
            .container-icon-right
                display: flex
                justify-content: flex-end
            .container-icon
                width: fit-content
                height: fit-content
                padding: 1em
                background-color: white
                border-radius: 26px
                img
                    width 46px
                    max-width: 46px
                    height: auto
            > p
                margin-top 36px
                font-size 20px
                +Responsive(max, 500px)
                    font-size 16px
            h3
                margin-top: 20px
                font-family tipografia-serif
                font-size: 26px
                word-break: break-all
                +Responsive(max, 500px)
                    word-break: normal
                    font-size: 22px
            .container-image-center
                display: flex
                justify-content: center
                align-items: center
                width 100%
                height 100%
    &__left
        display: flex
        flex-direction: column
        align-items: flex-end
        gap: 24px
        width 50%
        position: relative
        +Responsive(max, 1165px)
            position: static
            align-items: flex-start
            width 80%
        +Responsive(max, 500px)
            width calc(100% - 32px)
        &:after
            content: ''
            position: absolute
            z-index: 2
            width 18px
            height 18px
            top: 0
            right: -41px
            transform: translate(50%, -50%)
            background-color: white
            border-radius: 100%
            border: 2px solid blueDark-4
            +Responsive(max, 1165px)
                left: -1px
            +Responsive(max, 500px)
                left: -16px
