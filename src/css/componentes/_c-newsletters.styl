$c-newsletters = 'c-newsletters'

.c-newsletters
	&__nav
		position relative
		width 100%
		> ul
			display flex
			flex-direction row
			border-radius 100px
			position absolute
			width 100%
			background blue-1
			border 1px solid blue-3
			transition all .3s ease
			margin-bottom 2rem
			justify-content center
			position relative
			padding-top 5px
			+Tablet(max)
				display none
		li
			display inline-flex
			align-items center
			justify-content center
			&.filter
				p
					margin 0
					color blueDark-1
					+Tablet(min)
						position absolute
						left 10%
					+Tablet(max)
						position relative
						font-size 24px
			&.is-active,
			&:hover
				border-bottom 2px solid green-1
				a
					color green-1
					+TabletPortrait()
						border-bottom-color white

			a
				color blueDark-1
				font-size 16px
				line-height 20px
				height 100%
				padding 15px 20px
				font-weight 600
				text-align center
				transition 0.3s ease
		
			&:last-child
				a
					border-bottom-width 0px
					+TabletPortrait()
						border-bottom-width 1px

	&__content
		padding 0
		height 0
		overflow hidden
		opacity 0
		display none
		+TabletPortrait()
			border-bottom none
		overflow hidden
		display grid
		grid-template-columns repeat(3,1fr)
		gap 1.5rem
		+TabletPortrait(max)
			grid-template-columns repeat(2, 1fr)
		+Mobile(max)
			grid-template-columns repeat(1, 1fr)
	&__box
		padding 0
		margin 0 auto
	&__panel
		transition all 1s ease
		gap 1rem
		display: flex
		flex-direction column
		&.is-active
			.{$c-newsletters}__content
				margin-bottom 1rem
				display flex
				height auto
				opacity 1
				+Tablet(max)
					grid-template-columns repeat(1, 1fr)
					display grid
					padding 24px 32px
					gap 1rem
			.{$c-newsletters}__link
				&:after
					content icon-arrow-down
					background green-1
					border-color green-1
					color white
					font-size 26px

	&__link
		background blue-1
		border 1px solid blue-3
		padding 27px 80px 27px 30px
		position relative
		color blueDark-1
		font-size 20px
		line-height 24px
		display block
		width 100%
		transition 0.3s ease
		border-radius 36px
		overflow hidden
		+TabletPortrait()
			display none
		// &:hover
		// 	background blueDark-4
		&:after
			content icon-arrow-up-right
			font-family tipografia-icon
			position absolute
			top 50%
			transform translateY(-50%)
			right 20px
			border 1px solid blueDark-1
			width 48px
			height 48px
			display inline-flex
			border-radius 50%
			background transparent
			color blueDark-1
			font-size 22px
			align-items center
			justify-content center
			transition 0.3s all ease

			
	&__card
		background blue-1
		border 1px solid blue-3
		border-radius 2rem
		min-height 12rem
		padding 2rem 2rem 1.5rem
		gap 2rem
		display flex
		flex-direction column
		justify-content flex-end
		&-header
			display flex
			flex-direction row
			gap 1rem
			img
				width 25px
				object-fit contain
			p
				font-family tipografia-serif
				font-size 20px
				color gray-2
				margin 0
				margin-left 50px
				position relative
				&::after
					content ""
					width 30px
					height 30px
					background-image url("../images/global/GMX-pdf.png")
					background-position center
					background-size contain
					background-repeat no-repeat
					position absolute
					left -50px
					top 0
					display block
		&-footer
			display flex
			justify-content flex-end
