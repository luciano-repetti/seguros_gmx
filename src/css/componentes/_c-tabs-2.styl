$c-tabs-2 = 'c-tabs-2'

.c-tabs-2
	&__nav
		position relative
		ul
			display flex
			flex-direction column
			border-radius 0 0 36px 36px
			overflow hidden
			position absolute
			z-index 2
			width 100%
			border 1px solid blue-3
			background blue-2
			border-top 0
			transition all .3s ease
			display none
			+TabletPortrait()
				flex-direction row
				position static
				display flex
				border-radius 0
				border none
				background transparent
		li
			flex 1
			display inline-flex
			align-items center
			justify-content center
			
			&.is-active
				a
					background white 
					border-color blue-3
					+TabletPortrait()
						border-bottom-color white 
			a
				color blueDark-1
				font-size 16px
				line-height 20px
				width 100%
				height 100%
				padding 15px 20px 
				background blue-2
				overflow hidden
				text-align center
				border-bottom 1px solid blue-3
				transition 0.3s ease
		
				&:hover
					background white
					border-color blue-3
					border-bottom-color white
				+TabletPortrait()
					border 1px solid blue-2
					border-bottom-color blue-3
					border-radius 36px 36px 0 0
					padding 20px 20px 10px
		
			&:last-child 
				//margin-right -0.9px
				a
					border-bottom-width 0px
					+TabletPortrait()
						border-bottom-width 1px


		&.is-active
			
			.{$c-tabs}__navMobile
				&:after
					transform rotate(180deg)
			ul
				display flex

	&__box
		border 1px solid blue-3
		border-top none
		background white
		border-radius 0 0 36px 36px
		
	&__panel
		transition all 1s ease
		display none
		position relative
		&.is-active
			display block
			min-height 180px
		
	&__content
		//animation fadeEffect 0.6s ease
		padding 48px 32px

	&__navMobile
		background blue-2
		border-radius 36px 36px 0 0
		overflow hidden
		text-align center
		border 1px solid blue-3
		padding 15px 20px
		position relative
		height 72px
		display flex
		align-items center
		+TabletPortrait()
			display none

		label
			color blueDark-1
			font-size 20px
			line-height 24px
			width 100%
			display block
			transition 0.3s ease
		&:hover
			background white
		&:after
			content '\e900'
			font-family tipografia-icon
			display block
			position absolute
			top 26px
			right 26px
			font-size 18px
			color green-1
			transition 0.3s all ease
	