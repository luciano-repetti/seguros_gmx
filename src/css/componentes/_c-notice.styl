$c-notice = 'c-notice'

.c-notice
	&__container
		display grid
		gap 1rem
		&--header
			max-width 800px
			grid-template-columns repeat(2, 1fr)
			+Tablet(max)
				grid-template-columns repeat(1, 1fr)
		&--body
			width 100%
			max-width 1000px
			grid-template-columns repeat(3, 1fr)
			+TabletPortrait(max)
				grid-template-columns repeat(2, 1fr)
			+Tablet(max)
				grid-template-columns repeat(1, 1fr)
	&__card
		border 1px solid blue-3
		background-color blue-1
		display flex
		flex-direction column
		justify-content center
		align-items flex-start
		position relative
		border-radius 2rem
		gap .25rem
		padding 4rem 2.5rem
		+TabletPortrait(max)
			padding 4rem 4rem
		+Tablet(max)
			padding 4rem 2rem
		cursor pointer
		small
			font-size 14px
			color blueDark-1
			margin 0
		p
			font-size 18px
			color gray-2
		.o-btn-arrow--blue
			position absolute
			bottom 1rem
			right 1rem
	&__clasification
		width 24px
		height 24px
		border-radius 100%
		background transparent
		border 1px solid blue-3
		display flex
		justify-content center
		align-items center
		position absolute
		top 1rem
		right 1rem
		&--urgent
			&::after
				background-color #F2162F
		&--important
			&::after
				background-color #F2D916
		&--general
			&::after
				background-color #27BE0C
		&::after
			content ""
			width 8px
			height 8px
			border-radius 100%
	&__pagination_container
		display flex
		flex-direction row
		justify-content flex-end
		align-items center
		width 100%
		margin-top 2rem
	&__pagination
		display flex
		flex-direction row
		gap .5rem
		align-items center
	&__list
		a
			padding .5rem 1rem
			border-radius .5rem
			background-color blue-1
			border 1px solid blue-3
			color blueDark-4
			cursor pointer
		&--active
			a
				background-color blueDark-5
				border-color blueDark-1
				color white