$c-card-type4 = 'c-card-type4'

.c-card-type4
	&__container
		width 100%
		display grid
		grid-template-columns repeat(3, 1fr)
		gap 1rem
		+TabletPortrait(max)
			grid-template-columns repeat(2, 1fr)
		+Tablet(max)
			grid-template-columns repeat(1, 1fr)
	&__card
		border 1px solid blue-3
		background-color blue-1
		display flex
		flex-direction column
		justify-content center
		align-items center
		position relative
		border-radius 2.5rem
		gap 1rem
		padding 1rem 4rem
		padding-bottom 3rem
		img
			height 64px
		p
			margin 0
			color blueDark-3
			font-size 20px
			text-align center
		.o-btn-arrow
			position absolute
			bottom 2rem
			right 1rem