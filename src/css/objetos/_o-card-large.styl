.o-card-large
    width: 100%
    display: flex
    align-items: center
    justify-content: space-between
    background-color: blueDark-1
    padding: 1.5em
    border-radius: 2em
    color: #fff
    gap: 1em
    *
        margin: 0
    > p
        color: #fff
        font-size: 28px
        font-family: tipografia-serif
        +MobileLandscape(max)
            font-size: 20px
    .o-btn-arrow
        padding: .5em
    &--thick
        padding: 32px
        +Mobile(max)
            padding: 22px
        p
            width 90%
            font-size: 24px
            +Mobile(max)
                font-size: 18px
    .punt
        background-color: white
        width 38px
        height: 38px
        display: flex
        justify-content: center
        align-items: center
        border-radius: 50%
        +Mobile(max)
            width 32px
            height 32px
        > p
            color: blueDark-4
            font-size: 18px
            width 38px
            text-align: center
            +Mobile(max)
                font-size: 16px
    .container-text
        display: flex
        align-items: stretch
        gap: 1em
        position: relative
    &--light-blue
        background-color: blue-1
        border 1px solid blue-3
        p, small
            color: blueDark-1
        small
            font-size: 18px
            margin-right: 1em

.o-card-with-button
    min-width 70%
    display: flex
    background-color: blueDark-5
    color: black
    gap: 1em
    padding: 2em
    border-radius: 36px
    &--width-full
        min-width 100%
        gap: 2.5em
    +Phablet(max)
        min-width 100%
    +MobileLandscape(max)
        flex-direction: column-reverse
        padding: 1.5em
        gap: 0
    &__container-button
        display: flex
        align-items: center
        +MobileLandscape(max)
            padding: 0 1em
            justify-content: flex-end
            .o-btn-arrow
                width 30px
                height 30px
                font-size: 1em
    &__container-info
        display: flex
        flex-direction: column
        gap: 1em
        +MobileLandscape(max)
            gap: .5em
        p
            color: black
            font-size: 18px
            margin: .5em 0
            +MobileLandscape(max)
                font-size: 16px
        strong
            font-size: 22px
            +MobileLandscape(max)
                font-size: 18px
            a
                color: black