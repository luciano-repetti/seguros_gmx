$o-return = 'o-return'

.o-return
	margin-top 2rem
	max-width 1200px
	width 100%
	display flex
	justify-content center
	align-items center
	position relative
	flex-direction column
	+TabletPortrait(max)
		flex-direction column
		align-items flex-start
		gap 2rem
	.return
		color blueDark-1
		display flex
		flex-direction row
		align-items center
		height 1.5rem
		position relative
		+TabletPortrait(min)
			position absolute
			left 0
			top 1rem
		&::after
			content ""
			position absolute
		&.underline
			&::after
				left 0
				bottom -3px
				width 100%
				height 2px
				background-color blueDark-1
		&.anchor
			padding-left 2.5rem
			&::after
				top 0
				left 0
				width 1.5rem
				height 1.5rem
				background-repeat no-repeat
				background-position center
				background-size contain
				background-image url("../images/soy-agente/left-arrow.svg")
	&__container
		max-width 800px
		width 100%
		display flex
		flex-direction column
		gap 1rem
		margin-bottom 1.5rem
		&--640
			max-width 640px
		> h2
			color blueDark-1
			font-size 60px
			font-family tipografia-serif
			+Responsive(max, 600px)
				font-size 40px
			+MobilePortrait(max)
				font-size 28px
			&.mb-spacing
				margin-bottom 3.5rem
		> h3
			color blueDark-1
			font-size 28px
			+Responsive(max, 600px)
				font-size 24px
			+MobilePortrait(max)
				font-size 20px
			&.my-spacing
				margin 2rem 0
		> p
			font-size 20px
			color gray-2
			line-height 30px
			margin 0
			a
				color green-1
		ul
			display flex
			flex-direction column
			gap 1rem
			padding 1rem 0
			li
				position relative
				font-size 20px
				padding-left 1.25rem
				display flex
				align-items center
				&:before
					content: '\2022';
					position: absolute;
					font-size 2rem
					left: 0;
					color blueDark-4
		&--blog
			h2
				font-size 28px
			h3
				font-size 20px
	&__banner
		max-width 800px
		border-radius 1.5rem
		background-color blueDark-5
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-end
		color black
		width 100%
		gap 1.5rem
		padding 3rem 4rem 3rem 2rem
		margin-bottom 2rem
		+TabletPortrait(max)
			padding 1.5rem 2rem 1.5rem 1.5rem
			gap .85rem
			display flex
			flex-direction column
		a
			display flex
			flex-direction row
			align-items center
			gap 1rem			
			+TabletPortrait(max)
				gap .5rem
			&:hover
				.o-btn-arrow
					border-color green-1
					background green-1
					color white
		small
			font-size 20px
			margin 0
			margin-left 65px
			+TabletPortrait(max)
				font-size 16px
				margin-left 45px
		p
			font-size 24px
			color black
			margin 0
			word-break break-all
			+TabletPortrait(max)
				font-size 20px
			+Tablet(max)
				font-size 16px
		&--gray
			background-color blue-1
			border 1px solid blue-3
	&__image
		max-width 800px
		border-radius 1.5rem
		width 100%
		margin-bottom 2rem
	&__text
		display flex
		flex-direction column
		gap 1rem
		width 100%
		.o-btn-arrow
			width 48px
			height 48px
			+TabletPortrait(max)
				width 38px
				height 38px
			> i
				font-size 0.8em
				+Tablet(max)
					font-size 0.6em