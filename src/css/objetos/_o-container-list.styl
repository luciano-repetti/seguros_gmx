    display flex
    flex-direction column
    gap 1em
    > li
        position: relative
        color: gray-2
        margin-bottom: 5px
        padding-left: 15px
        line-height: 30px
        &:before
            content: "â€¢"
            position: absolute
            left: 0
            top: 15px
            transform: translateY(-50%)
            margin-right: 8px
            color: blueDark-4
            font-size: 1.5em
    p
        color: gray-2
        font-size: 18px
        +Mobile(max)
