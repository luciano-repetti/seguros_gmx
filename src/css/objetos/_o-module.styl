	&--deco5 &
		&__title
			h1, h2, h3
				color white
				font-size 40px
				+MobileLandscape()
					font-size 50px
				+Mobile()
					font-size 60px
				small
					font-size 18px
					font-family tipografia-serif
					font-weight regular
					display block
					position relative
				strong
					margin-top 20px
					color green-1
					&:before
						content ''
						background-image url(background'/gmx-deco-1.png')
						width 280px
						height 88px
						top: 50%
						left 50%
						transform: translate(-50%, -50%)
						// left -42px
						// top -8px
						+MobileLandscape()
							width 280px
							height 88px
							// left -66px
						+Mobile()
