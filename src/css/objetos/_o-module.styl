.o-module
	&__title
		position relative
		h1, h2, h3
			font-size 28px
			line-height 38px 
			color blueDark-1
			display inline-block
			strong
				font-size 46px
				line-height 66px 
				font-family tipografia-serif
				font-weight regular
				display block
				position relative
				&:before
					content ''
					position absolute
					//z-index -1
					top -2px
					height 88px
					background-repeat no-repeat
					background-size contain
					background-position left top
				+MobileLandscape()
					font-size 52px
					line-height 72px
				+Mobile()
					font-size 60px
					line-height 80px 

	&--deco1 &
		&__title
			h1, h2, h3
				strong
					margin-top 5px
					&:before
						content ''
						background-image url(background'/gmx-deco-1.png')
						width 236px
						height 74px
						left -42px
						top -8px
						+MobileLandscape()
							width 280px
							height 88px
							left -66px
						+Mobile()
							width 336px
							height 104px
							left -98px


	&--deco2 &
		&__title
			h1, h2, h3
				strong
					margin-top 5px
					&:before
