.o-bento
    width: 100%
    max-width: 640px
    min-height: 750px
    display: flex
    flex-direction: column
    gap: 1em
    > h2
        font-size: 28px
        color: #005581
        margin-bottom: 1em
        +Resposive(max, 600px)
            font-size: 22px
    .row
        &--uno
            flex: 4
            display: flex
            gap: 1em
            +Resposive(max, 600px)
                flex-direction: column
            &__col
                flex: 1
                display: flex
                flex-direction: column
                gap: 1em
                &__box
                    flex: 1
                    display: flex
                    flex-direction: column
                    gap: 2em
                    &--uno
                        flex: 8
                    &--dos
                        padding: 1em
                        max-height 112px
        &--dos
            flex: 1

    .container-text
        display: flex
        flex-direction: column
        gap: .5em
        position relative
        color white
        &--black
            color: black
        p
            font-size 22px
            +MobileLandscape(max)
                font-size 16px
        h3
            font-family tipografia-serif
        strong
            font-weight: 600
        .container-image
            position absolute
            top 0
            right: 0
            > img
                width 42px
        .text-serif
            font-family tipografia-serif
        &--color-black
            height: 100%
            justify-content: space-between
            margin-bottom: 2em
            *:not(.o-btn-arrow, i)
                color: black
    .container-with-button
        display: flex
        align-items: flex-end
        gap: 1em
        color white
        * 
            margin: 0
        > .o-btn-arrow
            width 36px
            height 36px
            i
                font-size: .8em
    .container-image
        &--height-full
            display: flex
            justify-content: center
            width 100%
            height: 100%
            img
                height: 100%

    &--company
        min-height: 560px
        box-sizing: border-box
        .container-text
            h3
                font-size: 28px
        .row
            &--uno
                flex: 6
                &__col
                    justify-content: space-between
                    &__box
                        &--uno
                            flex: 1
                            padding-top: 2em
                            padding-bottom: 3rem
                        &--dos
                            flex-direction: row
                .col--dos
                    padding-top: 3em
                    padding-bottom: 5rem
            &--dos
                gap: 0
                flex-direction: column
                a
                    color: #000

